{% extends 'base.html.twig' %}

{% block title %}Detaily{% endblock %}

{% block body %}
<h1>Yeti</h1>

<table class="table">
    <tbody>
        <tr>
            <th scope="row">Hodnocení</th>
            <td>{{ yeti.rating|e }}</td>
        </tr>
        <tr>
            <th scope="row">Jméno</th>
            <td>{{ yeti.name|e }}</td>
        </tr>
        <tr>
            <th scope="row">Pohlaví</th>
            <td>{{ yeti.sex.name|e }}</td>
        </tr>
        <tr>
            <th scope="row">Váha</th>
            <td>{{ yeti.weight|e }}</td>
        </tr>
        <tr>
            <th scope="row">Výška</th>
            <td>{{ yeti.height|e }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}
